extends layouts/base
include mixins/video
include mixins/photo
include mixins/todo
include mixins/did
include mixins/review

block content
    section.section-hero
        .hero.container
            .hero-img-box
                img.hero-img(src='img/img_01.jpg')
            .hero-text-box
                h1.heading-primary.hero-name
                    span.name_force HYO
                    | rin & 
                    span.name_force SUNG
                    | jae

                p.hero-description
                    | We&apos;ve been together for  
                    span.day-count  000
                    |  days

    section.section-video
        .container 
            h1.heading-primary.home-title Videos
            .videos.grid.grid--3-cols
                each potato in videoList
                    .video-cell
                        +video(potato)

    section.section-gallery
        .container 
            h1.heading-primary.home-title 
                span Gallery
                span.to-page 
                    a(href="/gallery") more photos →
            .gallery
                each photo in photoList
                    .gallery_img
                        +photo(photo)

    section.section-wtd
        .container 
            h1.heading-primary.home-title 
                span Schedule
                span.to-page 
                    a(href="/schedule") about schedule →
            .wtd.grid.grid--3-cols
                .wd-lists
                    h1.heading-secondary What we Did
                    .wd-lists-li
                        ul
                            each b in scheduleListTodo
                                li=b
                .wtd-lists
                    h1.heading-secondary What To Do
                    .wtd-lists-li
                        ul
                            each c in scheduleListDid
                                li=c
                .section-calendar
                    .calendar
                        h1.calendar-month 11
                        .date
                            .day S
                            .day M
                            .day T
                            .day W
                            .day T
                            .day F
                            .day S
                            .number
