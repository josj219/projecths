                            .number 25
                            .number 26
                            .number 27
                            .number 28
                            .number 29
                            .number 30
                            .number 31
        section.section-review
            .reviews.container
                h1.heading-primary.home-title 
                    span Movie Reviews
                    span.to-page 
                        a(href="/reviews") more reviews →
                +review(reviewList)
