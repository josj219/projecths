extends ../layouts/base

block content
    .container
        if errorMessage
            span=errorMessage
        .form-container
            form(method="POST", enctype="multipart/form-data")
                label(for="video" class="fileUpload") Video File Select
                input(type="file", accept="video/*", required, id="video", name="video"  style={display:"none"})
                input(type="date", value="2021-06-01", min="2020-11-05" name="when")
                input(placeholder="Title", required, type="text", name="title", maxlength=80)
                input(placeholder="Description", required, type="text", name="description", minlength=20)
                input(placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags")
                input(type="submit", value="Upload Video") 
