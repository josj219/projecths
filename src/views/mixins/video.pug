mixin video(video)
    .video-itself
        a(href=`/videos/${video.id}`)
            video(src="/"+video.fileUrl).video-thumb
    .video-message
        a(href=`/videos/${video.id}`).video-link
            p.video-where #{video.title}
            ul.video-hashtags
                each hashtag in video.hashtags
                    li=hashtag
            small.video-when #{video.when}