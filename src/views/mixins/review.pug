mixin review(review)
    .review-mixin
        .review-movie-poster
            a(href=`/gallery/${review.id}`)
                img(src=review.fileUrl)
        .review-movie
            figure.figure-review
                .figure-left
                    .review-img-wrapper
                        img.reviewer-img(alt='h' src='/img/h.png')
                    p.review-name Pyeongsik Bang
                blockquote.review-text
                    .review-stars#bang_star
                        i.far.fa-star
                        i.far.fa-star
                        i.far.fa-star
                        i.far.fa-star
                        i.far.fa-star
                        span#bang_score     #{review.bang_score}
                    p #{review.bang_comment}
            figure.figure-review
                .figure-left
                    .review-img-wrapper
                        img.reviewer-img(alt='j' src="/img/j.jpg")
                    p.review-name Dongjin Jo
                blockquote.review-text
                    .review-stars#jo_star
                        i.far.fa-star
                        i.far.fa-star
                        i.far.fa-star
                        i.far.fa-star
                        i.far.fa-star
                        span#jo_score      #{review.jo_score}
                    p #{review.jo_comment}

