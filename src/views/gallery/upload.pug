extends ../layouts/base

block content
    .container 
        if errorMessage
            span=errorMessage
        .form-container
            form(method="POST", enctype="multipart/form-data")
                label(for="photo") Photo File
                input(type="file", accept="image/*", required, id="photo", name="photo")
                input(placeholder="Title", required, type="text", name="title", maxlength=50)
                input(placeholder="Description", required, type="text", name="description", minlength=5)
                input(placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags")
                input(type="submit", value="Upload Photo") 
