extends ../layouts/base

block content
    .container
        if errorMessage
            span=errorMessage
        .form-container
            form(method="POST", enctype="multipart/form-data")
                label(for="review" class="fileUpload") select poster of the movie
                input(type="file", accept="image/*", required, id="review", name="review" style={display:"none"})
                input(placeholder="Movie Name", required, type="text", name="movieName", maxlength=50)
                input(placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags")
                input(placeholder="Bang's score for this Movie",required, type="number", min="0" max="5" step="0.1", name="bang_score" )
                input(placeholder="Bang's comment for this Moive.", required, type="text", name="bang_comment")
                input(placeholder="Jo's score for this Movie",required, type="number", min="0" max="5" step="0.1", name="jo_score")
                input(placeholder="Jo's comment for this Moive.", required, type="text", name="jo_comment")
                input(type="submit", value="Upload Review") 


